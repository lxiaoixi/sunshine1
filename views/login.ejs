<script src="/js/app.js"></script>
  <script>
    (function(){
      if(document.body.clientHeight< window.innerHeight){
        var space = window.innerHeight - document.body.clientHeight - 10;
        document.querySelector("#copyright").setAttribute("style","margin-top:"+space+"px");
      }else{
        document.querySelector("#copyright").setAttribute("style","margin-top:50px");
      }
    })()
  </script>
</body>
</html>