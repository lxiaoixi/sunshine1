<!doctype html>
<html>
<head>

    <%- include('admin/portal/head'); %>
   
      <%#引用ueditor%>
   <script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.config.js"></script>
 <script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.all.min.js"> </script>
 <script type="text/javascript" charset="utf-8" src="/ueditor/lang/zh-cn/zh-cn.js"> </script>
</head>
<body data-type="index">
	<!-- topbar start //-->
    <%- include('admin/portal/header') %>
	<!-- topbar end //-->
    <div class="am-cf admin-main">
    			<!-- side nav bar start //-->
        <%- include('admin/portal/sidernav') %>
			<!-- side nav bar end //-->


<div class="admin-content">
    <div class="admin-content-body">
      <div class="am-cf am-padding am-padding-bottom-0">
        <div class="am-fl am-cf"><strong class="am-text-primary am-text-lg">稿件管理</strong> / <small>新增稿件</small></div>
      </div>

      <hr/>

      

        <div class="am-u-sm-12 am-u-md-12 am-u-md-pull-12">
          <form class="am-form am-form-horizontal"  action="/article/add" method="post">
            <div class="am-form-group">
              <label for="user-name" class="am-u-sm-3 am-form-label">标题 / Title</label>
              <div class="am-u-sm-9">
                <input type="text" id="user-name" name="title" placeholder="请输入标题文字（10-20字左右）">
              </div>
            </div>

           
            <div class="am-form-group">
              <label for="user-name" class="am-u-sm-3 am-form-label">作者 / Author</label>
              <div class="am-u-sm-9">
                <input type="text" id="user-name" name="author" placeholder="请输入作者名字">
              </div>
            </div>

            <div class="am-form-group">
                                    <label for="user-weibo" class="am-u-sm-3 am-form-label">添加分类 <span class="tpl-form-line-small-title">Type</span></label>
                                    <div class="am-u-sm-12 am-u-md-3">
                                     <select data-am-selected="{btnSize: 'sm'}" name="articleType" id="fenlei">
                                        <%articletypes.forEach(function(articletype){ %>
                                            <option value="<%=articletype._id%>"><%=articletype.typeName%></option>
                                            <%})%>
                                        </select>
                                     
                                       
                                    </div>
                                </div>

            
                                  <div class="am-form-group">
                                    <label for="user-weibo" class="am-u-sm-3 am-form-label">检察院归属 <span class="tpl-form-line-small-title">Type</span></label>
                                    <div class="am-u-sm-12 am-u-md-3">
                                     
                                        <select  data-am-selected="{btnSize: 'sm'}" name="procuratorate" id="user-weibo">
                                         <%procuratorates.forEach(function(procuratorate){ %>
                                        
                                            <option value="<%=procuratorate._id%>"><%=procuratorate.proName%></option>
                                           <%})%>
                                        </select>
                                   
                                    </div>
                                </div>

            
                                <div class="am-form-group">
                                    <label for="user-intro" class="am-u-sm-3 am-form-label">文章内容</label>
                                     <div class="am-u-sm-9">
                                     <%#引用百度编辑器%>
                                       <script id="editor" name="content" type="text/plain" style="width:750px;height:500px;"></script>
                                    <script>
                                        var ue = UE.getEditor('editor');
                                   
    
                                    </script>
                                    </div>
                                </div>

            <div class="am-form-group">
              <div class="am-u-sm-9 am-u-sm-push-3">
                <button type="submit" class="am-btn am-btn-primary">发表文章</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

   <footer class="admin-content-footer">
      <hr>
      
        <div style="text-align:center">技术支持:北京中检旭风科技发展有限责任公司</div>
     
    </footer>
  </div>
  <!-- content end -->

</div>

<a href="#" class="am-icon-btn am-icon-th-list am-show-sm-only admin-menu" data-am-offcanvas="{target: '#admin-offcanvas'}"></a>




